<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

    </data>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/white"
        tools:context=".activity.FirstLoginActivity">

        <RelativeLayout
            android:id="@+id/rltool"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_56"
            android:elevation="@dimen/dp_5"
            android:background="@color/colorPrimaryDark">

            <ImageView
                android:id="@+id/ivClose"
                android:layout_width="@dimen/dp_24"
                android:layout_height="@dimen/dp_24"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_14"
                android:padding="@dimen/dp_2"
                android:src="@drawable/ic_back" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_toRightOf="@+id/ivClose"
                android:fontFamily="@font/helvetica"
                android:text=""
                android:textColor="@android:color/white"
                android:textSize="20.2sp" />

        </RelativeLayout>

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/rltool"
            android:layout_marginBottom="@dimen/dp_90"
            android:fillViewport="true"
            android:fitsSystemWindows="true"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginRight="@dimen/dp_16"
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_marginTop="@dimen/dp_10">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Looking for a booking?"
                    android:layout_marginTop="70dp"
                    android:gravity="center"
                    android:textColor="#212121"
                    android:textSize="24.29sp"
                    android:fontFamily="@font/helvetica"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Manage your existing bookings \nby signing in to the app.?"
                    android:layout_marginTop="20dp"
                    android:gravity="center"
                    android:textColor="#696969"
                    android:textSize="16.16sp"
                    android:fontFamily="@font/helvetica"/>





            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_30"
                android:text="Log in"
                android:textColor="@android:color/white"
                android:id="@+id/btLogin"
                android:background="@drawable/bg_login_gradient"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Or"
                android:textSize="18sp"
                android:layout_marginTop="@dimen/dp_70"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_45"
                android:layout_marginTop="@dimen/dp_30">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/bg_login_gradient"/>

                <View
                    android:layout_width="@dimen/dp_15"
                    android:layout_height="match_parent"/>

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/bg_login_gradient"/>


            </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/dp_40">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="New to StiyeTimer?"
                        android:textSize="16.16sp"
                        android:fontFamily="@font/helvetica"
                        android:textColor="#696969"
                       />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="Create New account"
                        android:textSize="16.16sp"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:gravity="center"
                        android:fontFamily="@font/helvetica"
                        android:textColor="#00B3BE"/>


                </LinearLayout>

            </LinearLayout>
        </androidx.core.widget.NestedScrollView>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:gravity="center"
            android:textSize="12.12sp"
            android:fontFamily="@font/helvetica"
            android:textColor="#696969"
            android:layout_marginBottom="@dimen/dp_10"
            android:text="By continuing you agree to Terms &amp; Conditions"/>


    </RelativeLayout>

</layout>