<?xml version="1.0" encoding="utf-8"?>
<layout>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/dp_16">


        <ImageView
            android:id="@+id/btnivclosedialog"
            android:focusable="true"
            android:clickable="true"
            android:layout_alignParentEnd="true"
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_30"
            android:src="@drawable/ic_cross_circle"/>

        <LinearLayout
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:textAlignment="center"
                android:id="@+id/tvtit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_16"
                android:fontFamily="@font/helvetica_regular"
                android:text="Achtung!"
                android:textColor="#000000"
                android:textSize="16sp"
                android:visibility="gone"/>


            <TextView
                android:textAlignment="center"
                android:id="@+id/tvtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_40"
                android:fontFamily="@font/helvetica_regular"
                android:text="@string/are_you_sure_you_want_to_reschedule_this_booking"
                android:textColor="#000000"
                android:textSize="16sp"
                android:lineHeight="@dimen/dp_22"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/dp_16"
                android:layout_marginBottom="@dimen/dp_10">

                <Button
                    android:layout_weight="1"
                    android:id="@+id/btCancel12"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_40"
                    android:background="@drawable/btn_addtocart"
                    android:text="@string/cancel"
                    android:textColor="@color/white"
                    android:textSize="@dimen/dp_16"
                    android:layout_marginEnd="@dimen/dp_8"/>

                <Button
                    android:layout_weight="1"
                    android:id="@+id/tvReschedule"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_40"
                    android:background="@drawable/btn_addtocart"
                    android:text="@string/reschedule"
                    android:layout_marginStart="@dimen/dp_8"
                    android:textColor="@color/white"
                    android:textSize="@dimen/dp_16" />

            </LinearLayout>
        </LinearLayout>

    </RelativeLayout>
</layout>

