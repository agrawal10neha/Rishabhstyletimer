<?xml version="1.0" encoding="utf-8"?>
<layout><data></data>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/white"
        tools:context=".activity.ReviewDetailActivity">

        <RelativeLayout
            android:id="@+id/rltool"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_56"
            android:elevation="@dimen/dp_5"
            android:background="@color/colorPrimaryDark">

            <ImageView
                android:id="@+id/ivClose"
                android:layout_width="@dimen/dp_24"
                android:layout_height="@dimen/dp_24"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_14"
                android:padding="@dimen/dp_2"
                android:src="@drawable/ic_back" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_toRightOf="@+id/ivClose"
                android:fontFamily="@font/helvetica"
                android:text="Rating Reviews"
                android:textColor="@android:color/white"
                android:textSize="20.2sp" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_marginRight="@dimen/dp_16">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:textSize="12sp"
                android:fontFamily="@font/helvetica"
                android:textColor="@color/font_grey"
                android:layout_marginTop="@dimen/dp_16"
                android:id="@+id/tvAno"/>

            <RatingBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:numStars="5"
                android:rating="2"
                android:stepSize="0.5"
                android:layout_marginTop="@dimen/dp_8"
                android:theme="@style/RatingBar"
                style="?android:attr/ratingBarStyleSmall"
                android:clickable="false"
                android:focusable="false"
                android:id="@+id/ratingSaloon"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_30">
                
                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="@dimen/dp_40"
                    android:layout_height="@dimen/dp_40"
                    android:id="@+id/cv"
                    android:src="@drawable/ic_user_round_black"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/cv"
                    android:orientation="vertical"
                    android:layout_marginLeft="@dimen/dp_16"
                    android:layout_centerVertical="true">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:textSize="16sp"
                        android:fontFamily="@font/helvetica"
                        android:textColor="@color/font_black"
                        android:id="@+id/tvCustomerName"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:textSize="14sp"
                        android:fontFamily="@font/helvetica"
                        android:textColor="@color/font_grey"
                        android:id="@+id/tvParlorsName"/>

                </LinearLayout>

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/seprator"
                android:layout_marginTop="@dimen/dp_14"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:fontFamily="@font/helvetica"
                android:layout_marginTop="@dimen/dp_8"
                android:textColor="@color/font_grey_dark"
                android:id="@+id/tvReview" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:fontFamily="@font/helvetica"
                android:layout_marginTop="@dimen/dp_6"
                android:textColor="@color/font_grey_light"
                android:id="@+id/tvBookDate"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:fontFamily="@font/helvetica"
                android:layout_marginTop="@dimen/dp_6"
                android:textColor="@color/font_grey_light"
                android:id="@+id/tvEmploye"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:fontFamily="@font/helvetica"
                android:layout_marginTop="@dimen/dp_6"
                android:textColor="@color/font_grey_light"
                android:id="@+id/tvServiceUsed"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/llReply">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/seprator"
                    android:layout_marginTop="@dimen/dp_18"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:fontFamily="@font/helvetica"
                    android:layout_marginTop="@dimen/dp_14"
                    android:textColor="@color/font_black"
                    android:text="Salon Responses"
                    android:id="@+id/tvSaloonName"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:fontFamily="@font/helvetica"
                    android:layout_marginTop="@dimen/dp_10"
                    android:textColor="@color/font_grey_dark"
                    android:id="@+id/tvReply"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:fontFamily="@font/helvetica"
                    android:layout_marginTop="@dimen/dp_6"
                    android:textColor="@color/font_grey_light"
                    android:id="@+id/tvReplyDate"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</layout>