        <View
            android:id="@+id/view"
            android:layout_below="@+id/rlreview"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:elevation="@dimen/dp_2"
            android:background="@color/seprator" />


        <androidx.recyclerview.widget.RecyclerView
            android:layout_below="@+id/view"
            android:id="@+id/rvReview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="visible"
            android:layout_marginBottom="@dimen/dp_16"/>



        <LinearLayout
            android:visibility="gone"
            android:id="@+id/layoutNodata"
            android:gravity="center_horizontal"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            tools:context=".activity.SalonReviewActivity">

            <ImageView
                android:adjustViewBounds="true"
                android:layout_width="@dimen/dp_240"
                android:layout_height="@dimen/dp_240"
                android:src="@drawable/ic_no_list"
                />

            <TextView
                android:layout_marginEnd="@dimen/dp_20"
                android:layout_marginStart="@dimen/dp_20"
                android:fontFamily="@font/helvetica"
                android:textAlignment="center"
                android:textSize="24sp"
                android:textColor="@color/blue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Es wurden noch keine Bewertungen fÃ¼r diesen Salon abgegeben"
                />


        </LinearLayout>

    </RelativeLayout>


</layout>