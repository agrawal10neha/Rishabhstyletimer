        <ImageView
            android:focusable="true"
            android:clickable="true"
            android:layout_width="@dimen/dp_38"
            android:layout_height="@dimen/dp_38"
            android:layout_marginLeft="@dimen/dp_10"
            android:src="@drawable/ic_circle_ripple"
            android:background="@drawable/ic_back_round"
            android:tint="@color/colorAccent"
            android:id="@+id/ivClose"
            android:layout_centerVertical="true"/>

        <TextView
            android:layout_toRightOf="@+id/ivClose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_6"
            android:text="Nach Bewertungen sortieren"
            android:textColor="@android:color/white"
            android:textSize="20.2sp"
            android:fontFamily="@font/helvetica"
            android:layout_centerVertical="true"/>

    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_16"
        android:drawableRight="@drawable/ic_down_drop"
        android:padding="@dimen/dp_16"
        android:id="@+id/tvCatagory"
        android:text="Alle Bewertungen"
        android:background="@drawable/bg_cardview_border_blue"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_16"
            android:id="@+id/cb5"/>

        <RatingBar
            style="?android:attr/ratingBarStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:focusable="false"
            android:numStars="5"
            android:stepSize="1"
            android:rating="5"
            android:layout_marginLeft="@dimen/dp_20"
            android:theme="@style/RatingBar"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
