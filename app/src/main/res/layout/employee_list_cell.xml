<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"><data><variable
    name="EmployeeListModel"
    type="com.si.styletimer.models.EmployeeListModel" /></data>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/dp_6"
    android:gravity="center_horizontal">

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="@dimen/dp_80"
        android:layout_height="@dimen/dp_80"
        android:id="@+id/iv"
        android:src="@drawable/ic_user_round_black"
        app:civ_border_width="@dimen/dp_2"
        app:civ_border_color="@color/CIRCLE"/>

    <TextView
        android:layout_width="@dimen/dp_100"
        android:layout_height="wrap_content"
        android:id="@+id/tvName"
        android:textSize="16sp"
        android:fontFamily="@font/helvetica"
        android:textColor="@color/font_black"
        android:ellipsize="end"
        android:layout_marginTop="@dimen/dp_5"
        android:singleLine="true"
        android:gravity="center_horizontal"/>

</LinearLayout>
</layout>